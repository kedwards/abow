# Disable startup messages
startup_message off
 
# Disable the whole-screen-flash-on-tab-complete "feature"
vbell off

setenv LC_CTYPE en_US.UTF-8
defutf8 on

# Enables use of shift-PgUp and shift-PgDn
termcapinfo xterm|xterms|xs|rxvt|rxvt-unicode ti@:te@
terminfo xterm|xterms|xs|rxvt|rxvt-unicode ti@:te@

# Enable 256 color term
term screen-256color

bindkey "^[Od" prev  # change window with ctrl-left
bindkey "^[Oc" next  # change window with ctrl-right

# The status bar
hardstatus on
hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %D %m/%d/%Y %C%a "
bind V split -v

#bind j focus down
#bind k focus up
#bind t focus top
#bind b focus bottom

bindkey "^[k" eval "copy" "stuff ^b"  # enter copy mode and move up one page
bindkey "^k" eval "copy" "stuff k"    # enter copy mode and move up one line
bindkey -m "^[k" stuff ^b             # move up one page
bindkey -m "^k" stuff k               # move up one line

